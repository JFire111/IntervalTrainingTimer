<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="DarkAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="colorSecondary">@color/darkThemeColorSecondary</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:progressTint">@color/darkThemeColorSecondary</item>
        <item name="android:progressBackgroundTint">@color/darkThemeColorSecondaryVariant</item>
        <item name="android:colorControlActivated">@color/darkThemeColorSecondary</item>
    </style>

    <style name="DarkSettingsTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimary</item>
        <item name="colorAccent">@color/darkThemeColorSecondary</item>
        <item name="android:windowBackground">@color/darkThemeColorPrimary</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
