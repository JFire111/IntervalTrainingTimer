<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkThemeColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimary</item>
        <item name="colorAccent">@color/darkThemeColorAccent</item>
    </style>

    <style name="DarkSettingsTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkThemeColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/darkThemeColorAccent</item>
        <item name="android:windowBackground">@color/darkThemeColorPrimaryDark</item>
    </style>
</resources>
