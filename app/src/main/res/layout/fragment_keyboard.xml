<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkThemeColorPrimaryDark">

    <EditText
        android:id="@+id/keyboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="18dp"
        android:singleLine="true"
        android:minWidth="150dp"
        android:maxWidth="250dp"
        android:maxLength="32"
        app:layout_constraintBottom_toTopOf="@+id/displayTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Keyboard Title" />

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="48sp"
        android:textColor="@color/inactiveGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00" />

    <Button
        android:id="@+id/keyboardButtonRest"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="0"
        android:elevation="0dp"
        android:text="REST"
        android:textSize="18sp"
        android:textColor="@color/inactiveGray"
        app:layout_constraintEnd_toStartOf="@+id/keyboardButtonWork"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayTextView" />

    <Button
        android:id="@+id/keyboardButtonWork"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="0"
        android:elevation="0dp"
        android:text="WORK"
        android:textColor="@color/inactiveGray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/keyboardButtonRest"
        app:layout_constraintTop_toBottomOf="@+id/displayTextView" />

    <GridLayout
        android:id="@+id/keyboardGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboardButtonWork">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="1"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="2"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="3"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="4"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="5"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="6"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="7"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="8"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="9"
            android:textSize="24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_column="1"
            android:text="0"
            android:textSize="24dp" />

    </GridLayout>

    <Button
        android:id="@+id/keyboardButtonCancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="onClickKeyboardButton"
        android:text="@string/keyboardButtonCancel"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/keyboardButtonOk"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyboardGridLayout" />

    <Button
        android:id="@+id/keyboardButtonOk"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:elevation="0dp"
        android:text="@string/keyboardButtonOk"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/keyboardButtonCancel"
        app:layout_constraintTop_toBottomOf="@+id/keyboardGridLayout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/keyboardButtonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:elevation="0dp"
        app:backgroundTint="@color/darkThemeColorPrimaryDark"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/displayTextView"
        app:layout_constraintStart_toEndOf="@+id/displayTextView"
        app:layout_constraintTop_toTopOf="@+id/displayTextView"
        app:srcCompat="@android:drawable/ic_input_delete" />

    <TextView
        android:id="@+id/hintMinutesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hintMinutes"
        android:textColor="@color/inactiveGray"
        app:layout_constraintEnd_toEndOf="@+id/displayTextView"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/displayTextView"
        app:layout_constraintTop_toBottomOf="@+id/displayTextView" />

    <TextView
        android:id="@+id/hintSecondsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hintSeconds"
        android:textColor="@color/inactiveGray"
        app:layout_constraintEnd_toEndOf="@+id/displayTextView"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="@+id/displayTextView"
        app:layout_constraintTop_toBottomOf="@+id/displayTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>